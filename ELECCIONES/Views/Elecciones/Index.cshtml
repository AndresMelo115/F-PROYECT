@model IEnumerable<ELECCIONES.Models.Elecciones>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@{int count = 0; }
@foreach (var item in Model)
{
    if (item.Estado == true)
    {
        count++;
    }
    else { }


    @if (count == 1)
    {
    }
    else
    {<p>
            <a asp-action="Create">Create New</a>
        </p>}
}


<p>
    <a asp-action="Admin" asp-controller="Home">Regresar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRealizacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaRealizacion)
                </td>
                <td>

                    @if (item.Estado == true)
                    {
                        <p>En Curso</p>
                    }
                    else
                    {
                        <p>Terminada</p>
                    }
                </td>
                <td>
                    @if (item.Estado == true)
                    {
                        <a asp-action="Edit" asp-route-id="@item.IdElecciones">Concluir</a>
                    }
                    else
                    {
                        <a asp-action="Index" asp-controller="Resultadoes" asp-route-id="@item.IdElecciones">Resultados</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
