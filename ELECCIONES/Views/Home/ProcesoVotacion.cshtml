@model IEnumerable<ELECCIONES.Models.Candidatos>
@{
    ViewData["Title"] = "ProcesoVotacion";
}

<h2>Proceso de Votacion</h2>



<div>
    <hr />
    <table class="table">
        <thead>
                <tr>
                     <th>
                
                     </th>
              
                    <th>                       
                        @ViewBag.Puestoelegido
                    
                    </th>
             
                    <th>

                    </th>
                </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
           
               
           

                var photoPath = "~/images/" + ((!string.IsNullOrEmpty(item.FotoPerfil) ? item.FotoPerfil : "download.jpg"));
                var photoPath2 = "~/images/" + ((!string.IsNullOrEmpty(item.PartidoPerteneceNavigation.LogoPartido) ? item.PartidoPerteneceNavigation.LogoPartido : "Flag.png"));

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre) 
                     
                            @Html.DisplayFor(modelItem => item.Apellido)
                        </td>
               
                        <td>
                            <img style="width: 100px;height: 100px" src="@photoPath" alt="Alternate Text" asp-append-version="true" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PartidoPerteneceNavigation.Nombre)
                        </td>

                        <td>
                            <img style="width: 50px;height: 50px" src="@photoPath2" alt="Alternate Text" asp-append-version="true" />
                        </td>

                        <td>
                    
                           <a asp-action="Votar" asp-route-id="@item.IdCandidatos"  class="btn btn-danger">Votar</a>
                        </td>

                    </tr>

             }

        </tbody>

    </table>  
</div>