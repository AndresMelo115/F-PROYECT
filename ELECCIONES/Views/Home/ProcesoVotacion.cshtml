@model IEnumerable<ELECCIONES.Models.Candidatos>
@{
    ViewData["Title"] = "ProcesoVotacion";
}

<h1>ProcesoVotacion</h1>

<div>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PartidoPerteneceNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PuestoAspiraNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PartidoPerteneceNavigation.LogoPartido)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {

                var photoPath = "~/images/" + ((!string.IsNullOrEmpty(item.FotoPerfil) ? item.FotoPerfil : "download.jpg"));
                var photoPath2 = "~/images/" + ((!string.IsNullOrEmpty(item.PartidoPerteneceNavigation.LogoPartido) ? item.PartidoPerteneceNavigation.LogoPartido : "Flag.png"));

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>

                <td>

                    @if (item.Estado == true)
                    {
                        <p>Activo</p>
                    }
                    else
                    {
                        <p>Inactivo</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartidoPerteneceNavigation.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PuestoAspiraNavigation.Nombre)
                </td>
            
                <td>
                    <img style="width: 200px;height: 200px" src="@photoPath" alt="Alternate Text" asp-append-version="true" />
                </td>
                <td>
                    <img style="width: 100px;height: 100px" src="@photoPath2" alt="Alternate Text" asp-append-version="true" />
                </td>

            </tr>
            }

</div>