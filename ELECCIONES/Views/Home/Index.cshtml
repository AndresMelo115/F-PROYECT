@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <header>
        <div class="bg-dark collapse" id="navbarHeader" style="" >
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 col-md-7 py-4">
                        <h4 class="text-white">About</h4>

                    </div>
                    <div class="col-sm-4 offset-md-1 py-4">
                        <h4 class="text-white">Sistema De Elecciones</h4>
                        <ul class="list-unstyled">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li><a asp-controller="Administrador" asp-action="Index" class="text-white font-weight-bolder">@User.Identity.Name</a></li>
                            }


                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="navbar navbar-dark bg-dark shadow-sm">


            @if (SignInManager.IsSignedIn(User))
            {

                <a asp-controller="Account" asp-action="Logout" class="text-white font-weight-bold">

                    Log Out
                </a>
                <span class="text-white"> @User.Identity.Name</span>



            }


            <a asp-action="Login" asp-controller="account" class="btn btn-primary my-1r">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" aria-hidden="true" class="mr-2" viewBox="0 0 24 24" focusable="false"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path><circle cx="12" cy="13" r="4"></circle></svg>
                <strong>Login</strong>
            </a>

        </div>

    </header>

    <h1>Sistema Electoral</h1>
    <p class="lead text-muted">
        "Bienvenido al sistema de votos automatizados, Ingrese como admin al sistema o ingrese su voto como civil"
    </p>
    <p>

        <a asp-action="Login" asp-controller="account" class="btn btn-primary my-2"><i style="font-size: 30px;" class="fa fa-camera" aria-hidden="true"></i>Log in Admin </a>



        <a href="#" class="btn btn-primary my-2">Votar</a>
    </p>

</div>
